    <div class="w-full h-full">
        <div
            class="bg-purple-800 h-2/3 w-full rounded-t-xl skew-y-[345deg] absolute -top-[30%] group-hover:-top-[35%] hover group-hover:skew-y-[375deg] duration-500 ease-in-out">
        </div>
    </div>
