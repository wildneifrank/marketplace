      <%- include('../../components/title', {title:"Contate-nos"}) %>
      <div class="text-lg font-semibold text-purple-800">Tem alguma dúvida ou reclamação? Mande-nos uma mensagem.</div>
      <form action="" class="lg:w-3/5 w-full flex flex-col gap-2 mb-5 md:mb-0" autocomplete="off">
        <div class="w-full flex flex-col gap-2">
          <label for="name" class="text-lg text-purple-800 font-semibold">Nome Completo</label>
          <input type="text" name="name" id="name" placeholder="Nome" class="rounded-md font-medium text-purple-800 border-purple-800 focus:border-purple-800 focus:ring-0">
        </div>
        <div class="w-full flex gap-3 flex-wrap md:flex-nowrap">
          <div class="md:w-1/2 w-full flex flex-col gap-2">
            <label for="email" class="text-lg text-purple-800 font-semibold">Email</label>
            <input type="email" name="email" id="email" placeholder="Email" class="rounded-md font-medium text-purple-800 border-purple-800 focus:border-purple-800 focus:ring-0">
          </div>
          <div class="md:w-1/2 w-full flex flex-col gap-2">
            <label for="phone" class="text-lg text-purple-800 font-semibold">Telefone</label>
            <input type="tel" name="phone" id="phone" placeholder="Telefone" class="rounded-md font-medium text-purple-800 border-purple-800 focus:border-purple-800 focus:ring-0">
          </div>
        </div>
        <div class="w-full flex flex-col gap-2">
          <label for="message" class="text-lg text-purple-800 font-semibold">Mensagem</label>
          <textarea name="message" id="message" class="rounded-md font-medium h-56 p-3 text-purple-800 border-purple-800 focus:border-purple-800 focus:ring-0" placeholder="Digite uma mensagem..."></textarea>

        </div>
        <button type="submit" class="border bg-white text-lg font-semibold rounded-md shadow-md px-3 py-2 border-purple-800 text-purple-800 hover:text-white hover:bg-purple-800 duration-500 ease-in-out sm:w-2/5 md:w-1/5 w-full mt-2">Enviar</button>
      </form>
    </div>
